@page
@model Pizzeria.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of pizzas!</h1>
        <h4>Choose one, or try our pizza builder! then order and done!</h4>
        <h4>No need to give any of your details!</h4>
        <h4>We already know everything!!</h4>

        <p class="smallText"><i>Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                <div class="row w-100 makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own pizza</h3>
                            <p style="text-align:left;">Make your own pizza with our Pizza_Maker</p>
                            <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imageUrl = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");

                <div class="col-4 mb-5">
                    <a class="PizzaImg" asp-area="" asp-page="Checkout/Checkout"
                    asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaName="@pizza.PizzaName"
                    asp-route-TotalPrice="@pizza.FinalPrice" >

                        <img src="@imageUrl" class="w-100" asp-append-version="true" />
                    </a>
                </div>
            }
        </div>
    </div>
</div>