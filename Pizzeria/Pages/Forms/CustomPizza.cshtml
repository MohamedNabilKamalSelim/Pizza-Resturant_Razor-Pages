@page
@model Pizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="container text-center">
    <h1>Create Your Own Pizza!</h1>
    <form class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4" method="post">
        <div class="form-text mb-2">
            <label asp-for="Pizza.PizzaName">Pizza Name</label>
            <input type="text" asp-for="Pizza.PizzaName" aria-required="true" maxlength="100" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Cheese" />
            <label asp-for="Pizza.Cheese"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Mushroom" />
            <label asp-for="Pizza.Mushroom"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Ham" />
            <label asp-for="Pizza.Ham"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Peperoni" />
            <label asp-for="Pizza.Peperoni"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Beef" />
            <label asp-for="Pizza.Beef"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Pineaple" />
            <label asp-for="Pizza.Pineaple"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.TomatoSauce" />
            <label asp-for="Pizza.TomatoSauce"></label>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Order My Pizza</button>
    </form>
</div>